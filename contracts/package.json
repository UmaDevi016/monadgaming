{
    "name": "chaincraft-contracts",
    "version": "1.0.0",
    "description": "ChainCraft smart contracts for Monad blockchain",
    "scripts": {
        "setup": "npm install",
        "compile": "npx hardhat compile",
        "test": "npx hardhat test",
        "deploy": "npx hardhat run scripts/deploy.js --network monad",
        "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
        "verify": "npx hardhat verify --network monad"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "hardhat": "^2.22.0"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^5.0.2",
        "dotenv": "^16.4.5"
    }
}